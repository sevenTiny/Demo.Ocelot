{
  "ReRoutes": [
    {
      // - 上游服务配置
      "UpstreamPathTemplate": "/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],

      // - 下游服务配置
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 39993
        },
        {
          "Host": "localhost",
          "Port": 39992
        },
        {
          "Host": "localhost",
          "Port": 39991
        }
      ],

      // - 负载均衡配置
      /*
      LeastConnection C 将请求发往最空闲的那个服务器
      RoundRobin C 轮流发送
      NoLoadBalance C 总是发往第一个请求或者是服务发现
      */
      "LoadBalancer": {
        "Type": "RoundRobin"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://api.mybusiness.com"
  }
}